@model Clinica.Models.SpecialtyRoom

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-3">Crear consultorio</h1>

<hr />
        <form asp-action="Create">
            <div class="row">
                <div class="col-12">
                    <div class="col-12 col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="number" class="control-label">Número de consultorio</label>
                <input asp-for="number" class="form-control" />
                <span asp-validation-for="number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="specialty" class="control-label">Nombre de la especialidad</label>
                <input asp-for="specialty" class="form-control" />
                <span asp-validation-for="specialty" class="text-danger"></span>
            </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-3 col-xl-2 order-md-2">
            <div class="form-group">
                <input type="submit" value="Crear consultorio" class="btn btn-primary btn-block" />
            </div>
        </div>
        <div class="col-12 col-md-3 col-xl-2 d-flex align-items-center order-md-1">
            <a asp-action="Index" class="btn btn-secondary btn-block">Regresar</a>
        </div>
    </div>
        </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
