@model IEnumerable<Clinica.Models.Equipment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.assetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datePurchase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.specialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.consultingRoom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.assetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.serial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datePurchase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.specialty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.consultingRoom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idEquipment">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idEquipment">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idEquipment">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
