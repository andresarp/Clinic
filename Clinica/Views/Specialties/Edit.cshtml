@model Clinica.Models.Specialty

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-3">Editar paciente</h1>

<hr />

<form asp-action="Edit">
    <div class="row">
        <div class="col-12">
            <div class="col-12 col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nameSpecialty" class="control-label">Nombre de la especialidad</label>
                <input asp-for="nameSpecialty" class="form-control" />
                <span asp-validation-for="nameSpecialty" class="text-danger"></span>
            </div>
            </div>
        </div>
            </div>
    <div class="row">
        <div class="col-12 col-md-3 col-xl-2 order-md-2">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
            </div>
        </div>
        <div class="col-12 col-md-3 col-xl-2 d-flex align-items-center order-md-1">
            <a asp-action="Index" class="btn btn-secondary btn-block">Regresar</a>
        </div>
    </div>
        </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
