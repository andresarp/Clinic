@model Clinica.Models.Patient

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar paciente</h1>

<hr />

        <form asp-action="Edit">
    <div class="row">
        <div class="col-12">
            <div class="col-12 col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUser" />
                <div class="form-group">
                    <label asp-for="IdUser" class="control-label">Cédula</label>
                    <input asp-for="IdUser" class="form-control" disabled="true"/>
                    <span asp-validation-for="IdUser" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Teléfono</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            </div>
        </div>
        </div>
    <div class="row">
        <div class="col-12 col-md-3 col-xl-2 order-md-2">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
            </div>
        </div>
        <div class="col-12 col-md-3 col-xl-2 d-flex align-items-center order-md-1">
            <a asp-action="Index" class="btn btn-secondary btn-block">Regresar</a>
        </div>
    </div>

        </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
